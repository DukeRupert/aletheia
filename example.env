# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
ENVIRONMENT=dev

# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres

# Migrations
GOOSE_DRIVER=postgres
GOOSE_DBSTRING=postgres://postgres:postgres@localhost:5432/postgres
GOOSE_MIGRATION_DIR=./internal/migrations

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=debug

# Authentication
# IMPORTANT: Change this in production!
JWT_SECRET=your-secret-key-change-in-production

# Email Configuration
# Provider options: "mock" (for development) or "postmark" (for production)
EMAIL_PROVIDER=mock
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Aletheia
EMAIL_VERIFY_BASE_URL=http://localhost:1323

# Postmark Configuration (only required when EMAIL_PROVIDER=postmark)
# Get your tokens from: https://account.postmarkapp.com/servers
POSTMARK_SERVER_TOKEN=your-postmark-server-token-here
POSTMARK_ACCOUNT_TOKEN=your-postmark-account-token-here

# Storage Configuration
# Provider options: "local" (for development) or "s3" (for production)
STORAGE_PROVIDER=local

# Local Storage Configuration (used when STORAGE_PROVIDER=local)
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=http://localhost:1323/uploads

# S3 Storage Configuration (only required when STORAGE_PROVIDER=s3)
# Requires AWS credentials to be configured via environment variables or AWS config files
STORAGE_S3_BUCKET=your-s3-bucket-name
STORAGE_S3_REGION=us-east-1
STORAGE_S3_BASE_URL=https://your-cloudfront-url.com

# AI Configuration
# Provider options: "mock" (for development) or "claude" (for production)
AI_PROVIDER=mock

# Claude/Anthropic Configuration (only required when AI_PROVIDER=claude)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3

# Queue Configuration
QUEUE_PROVIDER=postgres
QUEUE_WORKER_COUNT=3
QUEUE_POLL_INTERVAL=1s
QUEUE_JOB_TIMEOUT=60s
QUEUE_ENABLE_RATE_LIMITING=true

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
# These variables are used for Docker deployment with docker-compose.prod.yml

# Docker Hub Configuration
DOCKER_USERNAME=your-dockerhub-username
IMAGE_TAG=latest

# Watchtower Configuration (automatic container updates)
# Poll interval in seconds (300 = 5 minutes)
WATCHTOWER_POLL_INTERVAL=300

# AWS Credentials (required when STORAGE_PROVIDER=s3)
# These can also be configured via AWS CLI or IAM roles
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Production Notes:
# - Change JWT_SECRET to a strong random string (use: openssl rand -base64 64)
# - Use strong database passwords (use: openssl rand -base64 32)
# - Set ENVIRONMENT=prod for production deployments
# - Use STORAGE_PROVIDER=s3 for production
# - Use EMAIL_PROVIDER=postmark for production
# - Set LOG_LEVEL=info or warn for production
# - Update EMAIL_VERIFY_BASE_URL to your production domain
# - Ensure DB_HOSTNAME=postgres when using docker-compose.prod.yml
